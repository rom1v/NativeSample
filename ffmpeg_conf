# HOWTO build ffmpeg for this project:
#   git clone https://git.ffmpeg.org/ffmpeg.git
#   cd ffmpeg
#   mkdir build
#   cd build
#   . ../../ffmpeg_conf

# Adapt NDK path:
NDK_ROOT=/home/rom/android/ndk

DIST=../dist
ABI=arm64-v8a
TARGET_TRIPLE_MACHINE_BINUTILS=aarch64
HOST_TAG=linux-x86_64
TOOLCHAIN_PATH="$NDK_ROOT"/toolchains/llvm/prebuilt/"$HOST_TAG"
SYSROOT="$TOOLCHAIN_PATH"/sysroot
CROSS_PREFIX="$TOOLCHAIN_PATH"/bin/llvm-
CC="$TOOLCHAIN_PATH"/bin/aarch64-linux-android33-clang
../configure \
    --prefix="$DIST/$ABI" \
    --enable-cross-compile \
    --target-os=android \
    --arch="$TARGET_TRIPLE_MACHINE_BINUTILS" \
    --sysroot="$SYSROOT" \
    --cross-prefix="$CROSS_PREFIX" \
    --cc="$CC" \
    --extra-cflags="-O2 -fPIC" \
    --enable-shared \
    --disable-static \
    --disable-programs \
    --disable-doc \
    --disable-muxers \
    --disable-swscale \
    --disable-swresample \
    --disable-postproc \
    --disable-avfilter \
    --disable-avdevice \
    --disable-everything \
    --enable-decoder=h264 \
    --enable-protocol=rtp \
    --enable-muxer=rtp \
    --disable-vulkan
